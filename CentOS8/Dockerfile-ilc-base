###############################################################################
#  Repository: mucoll-ilc-base
#  Tag:        1.0-centos8
###############################################################################

FROM mucoll-environment:1.0-centos8

RUN cd /opt && git clone https://github.com/iLCSoft/iLCInstall.git && cd iLCInstall && \
    sed -i 's|/usr/bin/env python|/usr/bin/env python2|g' ilcsoft-install && \
    mkdir releases/development

COPY release-base.cfg /opt/iLCInstall/releases/development
COPY release-versions.py /opt/iLCInstall/releases/development

RUN cd /opt/iLCInstall && \
    ./ilcsoft-install releases/development/release-base.cfg --install-prefix=/opt/ilcsoft -v -i



